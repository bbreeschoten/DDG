<div class="panel radius">
	<div class="row">
		<div class="small-2 columns">
			<a class="th" href="<%= refinery.activities_activity_path(activity) %>">
				<%= image_fu activity.coverfoto, "100x100" %>
			</a>
			<br><br>
			<center><a href="<%= refinery.activities_activity_path(activity) %>" class="label radius round">info</a></center>
		</div>
		<div class="small-7 columns">
			<h4><%= link_to activity.naam, refinery.activities_activity_path(activity) %> 
				<small><%= activity.woonplaats %></small>
			</h4>
			<span><%= truncate(strip_tags(activity.beschrijving), length: 100) %></span>	
			<br/>
			<span class="secondary label">
				Doelgroepen:
			</span>
		
				<% activity.targetgroups.each do |t| %>						
					<span data-tooltip class="has-tip" title="<%= t.name %>">
						<small><%= t.abbreviation %></small>
					</span>
				<% end %>		
		
		</div>
		<div class="small-3 columns">
			<div class="secondary label">
				Profielen
			</div>
			<ul class="circle">
			<% activity.profiles.each do |p| %>
				<li><h6 class='subheader'><%= p.name %></h6></li>
			<% end %>	
			</ul>
			
		</div>
	</div>							
</div>