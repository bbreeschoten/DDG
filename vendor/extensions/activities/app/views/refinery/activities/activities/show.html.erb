<% content_for :body_content_title do %>
  <%= @activity.naam %>
<% end %>
<% content_for :side_body do %>
<% end %>

<% content_for :body do %>
<div class="row">
	<div class="small-12 columns">	
		<h2>
		  <%=raw @activity.naam %>
		<h2>
	</div>		

	<div class="right panel radius hide-for-small large-3 columns">
	  <h5><%= @other_title %></h5>
	  <ul id="activities">
	    <% @other_activities.each do |activity| %>
	      <li>
	        <%= link_to activity.naam, refinery.activities_activity_path(activity) %>
	      </li>
	    <% end %>
	  </ul>
	  <%= link_to "Alle activiteiten", refinery.activities_activities_path(@active_facets), :class=>"button round" %>	
	</div>
	
	
	<div class="left small-12 large-9 columns">
		<div class="row" data-equalizer>
			    <div class="left panel radius small-12 medium-6 columns"  data-equalizer-watch>
					<%= if_tag("p", raw(@activity.beschrijving), :class=>nil) %>
					<%= if_tag("p", raw(@activity.voorwaarden), :class=>nil) %>
				</div>
				<div class="right panel radius small-12 medium-6 columns" data-equalizer-watch>
			      <%= image_fu @activity.coverfoto, "400x" %>
			    </div>	
		</div>
		<div class="row" data-equalizer>
				<div class="left panel radius small-12 medium-6 columns" data-equalizer-watch>
					<h5>Profiel<%= "en" if @activity.profiles.count > 1 %></h5>	
					<ul>
				      <% @activity.profiles.each do |p| %>
						<li><%= p.name %></li>
					  <% end %>	
					</ul>
				</div>					
				<div class="right panel radius small-12 medium-6 columns" data-equalizer-watch>
					<h5>Doelgroep<%= "en" if @activity.targetgroups.count > 1 %></h5>	
					<ul>
				      <% @activity.targetgroups.each do |t| %>
						<li><%= t.name %></li>
					  <% end %>	
					</ul>
				</div>
	</div>
	<div class="row" data-equalizer>
				<div class="left panel radius small-12 medium-6 columns" data-equalizer-watch>
				    <h5>Adres</h5>
				    <p>
				      <%=raw @activity.adres %><br>
					  <%=raw @activity.postcode %>&nbsp;&nbsp;<%=raw @activity.woonplaats %>
				    </p>
					<p>
					   Website: <a href="http://<%= raw @activity.sitelink %>" target="_blank"><%=raw @activity.sitelink %></a>	
					</p>	
				</div>
				<div class="right panel radius small-12 medium-6 columns" data-equalizer-watch>
				    <h5>Contact</h5>
				    <p>
				      <%=raw @activity.contact %>
				    </p>
				</div>
	</div>
	<div class="row" data-equalizer>
				<div class="left panel radius small-12 medium-6 columns" data-equalizer-watch>
				    <h5>Openingstijden</h5>
				    <p>
				      <%=raw @activity.openingstijden %>
				    </p>

					<%= if_tag("p", raw(@activity.fysieke_toegankelijkheid), :class=>nil) %>
	
				</div>
				<div class="right panel radius small-12 medium-6 columns" data-equalizer-watch>
				    <h5>Kenmerken</h5>
					<ul>
					    <li>
					      Capaciteit: <%=raw @activity.grootte %>
					    </li>
					    <li>
					      Gemiddeld aantal clienten: <%=raw @activity.gemiddeld_aantal_clienten %>
					    </li>
					    <li>
					      Leeftijden van <%=raw @activity.leeftijd_van %> tot <%=raw @activity.leeftijd_tot %> jaar
					    </li>
					    <li>
					      Rolstoelvriendelijk: <%=raw @activity.rolstoelvriendelijk %>
					    </li>
					</ul>
				</div>		
	</div>
</div>

	
<% end %>




<%= render '/refinery/content_page' %>