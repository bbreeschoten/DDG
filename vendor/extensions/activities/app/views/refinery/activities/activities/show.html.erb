<% content_for :body_content_title do %>
  <%= @activity.naam %>
<% end %>

<% content_for :body do %>
<section>
  <h4>Naam</h4>
  <p>
    <%=raw @activity.naam %>
  </p>
</section>
  <section>
    <h4>Profiel</h4>
    <p>
		<ul>
	      <% @activity.profiles.each do |p| %>
			<li><%= p.name %></li>
		  <% end %>	
		</ul>
    </p>
  </section>
  <section>
    <h4>Coverfoto</h4>
    <p>
      <%= image_fu @activity.coverfoto, "400x" %>
    </p>
  </section>
  <section>
    <h4>Beschrijving</h4>
    <p>
      <%=raw @activity.beschrijving %>
    </p>
  </section>
  <section>
    <h4>Adres</h4>
    <p>
      <%=raw @activity.adres %>
    </p>
  </section>
  <section>
    <h4>Postcode</h4>
    <p>
      <%=raw @activity.postcode %>
    </p>
  </section>
  <section>
    <h4>Woonplaats</h4>
    <p>
      <%=raw @activity.woonplaats %>
    </p>
  </section>
  <section>
    <h4>Contact</h4>
    <p>
      <%=raw @activity.contact %>
    </p>
  </section>
  <section>
    <h4>Sitelink</h4>
    <p>
      <%=raw @activity.sitelink %>
    </p>
  </section>
  <section>
    <h4>Openingstijden</h4>
    <p>
      <%=raw @activity.openingstijden %>
    </p>
  </section>
  <section>
    <h4>Doelgroepen</h4>
    <p>
		<ul>
	      <% @activity.targetgroups.each do |t| %>
			<li><%= t.name %></li>
		  <% end %>	
		</ul>
    </p>
  </section>
  <section>
    <h4>Grootte</h4>
    <p>
      <%=raw @activity.grootte %>
    </p>
  </section>
  <section>
    <h4>Gemiddeld Aantal Clienten</h4>
    <p>
      <%=raw @activity.gemiddeld_aantal_clienten %>
    </p>
  </section>
  <section>
    <h4>Leeftijd</h4>
    <p>
      van <%=raw @activity.leeftijd_van %> tot <%=raw @activity.leeftijd_tot %>
    </p>
  </section>
  <section>
    <h4>Voorwaarden</h4>
    <p>
      <%=raw @activity.voorwaarden %>
    </p>
  </section>
  <section>
    <h4>Rolstoelvriendelijk</h4>
    <p>
      <%=raw @activity.rolstoelvriendelijk %>
    </p>
  </section>
  <section>
    <h4>Fysieke Toegankelijkheid</h4>
    <p>
      <%=raw @activity.fysieke_toegankelijkheid %>
    </p>
  </section>
  <section>
    <h4>Benodigde Indicatie</h4>
    <p>
      <%=raw @activity.benodigde_indicatie %>
    </p>
  </section>
  <section>
    <h4>Spelregels Vervoer</h4>
    <p>
      <%=raw @activity.spelregels_vervoer %>
    </p>
  </section>
  <section>
    <h4>Tags</h4>
    <p>
      <%=raw @activity.tags %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="activities">
      <% @activities.each do |activity| %>
        <li>
          <%= link_to activity.naam, refinery.activities_activity_path(activity) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
